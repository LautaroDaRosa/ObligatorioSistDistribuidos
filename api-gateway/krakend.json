{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "name": "KrakenD - API Gateway",
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "endpoints": [
    {
      "endpoint": "get_data",
      "method": "GET",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/getData",
          "encoding": "no-op",
          "method": "GET",
          "host":["sv-data-retrieval"]
        }
      ],
      "input_headers": ["*"]
    },
    {
      "endpoint": "insert",
      "method": "POST",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/insertData",
          "encoding": "no-op",
          "method": "POST",
          "host":["sv-producer"]
        }
      ],
      "input_headers": ["*"]
    },
    {
      "endpoint": "get_token",
      "method": "POST",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/get_token",
          "encoding": "no-op",
          "method": "POST",
          "host":["sv-jwt"]
        }
      ],
      "input_headers": ["*"]
    }
  ],
  "output_encoding": "json",
  "port": 8080
}